{
  "openapi": "3.0.0",
  "info": {
    "title": "Identity Server API",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "User Data": {
        "type": "object",
        "required": ["name", "password", "email"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Luis"
          },
          "password": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          },
          "email": {
            "type": "string",
            "example": "luis@email.com"
          }
        }
      },
      "User Credentials": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          },
          "email": {
            "type": "string",
            "example": "luis@email.com"
          }
        }
      },
      "User Activation Credentials": {
        "type": "object",
        "required": ["password", "confirmPassword"],
        "properties": {
          "password": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          },
          "confirmPassword": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          }
        }
      }
    },
    "securitySchemes": {
      "Cookie Auth": {
        "type": "http",
        "name": "coders_identity_token",
        "cookieFormat": "JWT"
      }
    },
    "responses": {
      "unauthorizedError": {
        "description": "Access token is missing or invalid."
      }
    }
  },
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["User"],
        "summary": "Creates a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User Data"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "example": {
                  "user": {
                    "id": "63aca69eec0ef2f821d57f40",
                    "name": "Luis",
                    "email": "luis@email.com"
                  }
                }
              }
            }
          },
          "409": {
            "description": "User already exists."
          }
        }
      }
    },
    "/users/activate": {
      "post": {
        "tags": ["User"],
        "summary": "Activates a user account",
        "parameters": [
          {
            "description": "User Activation Key",
            "required": true,
            "name": "activationKey",
            "in": "query",
            "schema": {
              "type": "string",
              "example": "507f191e810c19729de860ea"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User Activation Credentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User activated",
            "content": {
              "application/json": {
                "example": {
                  "message": "User account has been activated"
                }
              }
            }
          },
          "401": {
            "description": "Invalid activation key",
            "content": {
              "application/json": {
                "example": {
                  "error": "Invalid activation key"
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["User"],
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User Credentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User correctly logged",
            "content": {
              "application/json": {
                "example": {
                  "token": "#"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorizedError"
          }
        }
      }
    },
    "/users/verify-token": {
      "get": {
        "tags": ["Auth"],
        "summary": "Verify user token",
        "security": [
          {
            "Cookie Auth": []
          }
        ],
        "parameters": [
          {
            "in": "cookie",
            "name": "coders_identity_token",
            "required": true,
            "description": "A valid JWT token must be passed in the 'coders_identity_token' cookie",
            "schema": {
              "type": "string",
              "example": "coders_identity_token=xx.yy.zz"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User token payload decoded.",
            "content": {
              "application/json": {
                "example": {
                  "userPayload": {
                    "name": "Luis",
                    "id": "63aca69eec0ef2f821d57f40"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorizedError"
          }
        }
      }
    }
  }
}
