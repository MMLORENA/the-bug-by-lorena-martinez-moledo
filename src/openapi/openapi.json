{
  "openapi": "3.0.0",
  "info": {
    "title": "Identity Server API",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "User Data": {
        "type": "object",
        "required": ["name", "password", "email"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Luis"
          },
          "password": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          },
          "email": {
            "type": "string",
            "example": "luis@email.com"
          }
        }
      },
      "User Credentials": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "example": "q65T!34mBC8h3#ul7K"
          },
          "email": {
            "type": "string",
            "example": "luis@email.com"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer Auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "unauthorizedError": {
        "description": "Access token is missing or invalid"
      }
    }
  },
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["User"],
        "summary": "Creates a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User Data"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "example": {
                  "user": {
                    "id": "63aca69eec0ef2f821d57f40",
                    "name": "Luis",
                    "email": "luis@email.com"
                  }
                }
              }
            }
          },
          "409": {
            "description": "User already exists"
          }
        }
      }
    },
